@page
@using MOSTComputers.UI.Web.Models.Authentication
@using MOSTComputers.UI.Web.Pages.Shared.Accounts.Admin
@using static MOSTComputers.UI.Web.Utils.SelectListItemUtils

@model AdminPanelModel
@{
}

@section Styles {
    <link rel="stylesheet" href="~/css/BodyFullHeight.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/css/CustomElements/NotificationBox.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/css/Pages/Accounts/CommonStyles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Pages/Shared/ProductDisplayPopupsCommon.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/Display/ElementDisplayToggle.js"></script>
    <script src="~/js/Display/CustomElements/NotificationBox.js"></script>

    <script src="~/js/Pages/Accounts/CommonElements.js"></script>
    <script src="~/js/Pages/Accounts/AdminPanel.js"></script>
    <script src="~/js/Pages/Shared/PopupCommonElements.js"></script>
}

<div class="full-parent-width full-parent-height d-flex flex-column" style="padding: 3% 5%">
    <div id="@Model.UsersListPartialContainerElementId" class="full-parent-width flex-grow-1 flex-shrink-0">
        <partial name="@Model.UserListPartialPath" model='new UserListPartialModel()
        {
            Users = Model.Users,
            ContainerElementId = @Model.UsersListPartialContainerElementId,
            NotificationBoxId = @Model.NotificationBoxElementId,
            ChangePasswordModalData = Model.ChangePasswordModalData,
            UserDeleteConfirmationModalData = Model.UserDeleteConfirmationModalData,
        }' />
    </div>

    <button id="add_new_user_button" type="button" class="btn btn-success"
        onclick="redirectToSignInPageCommon(@((int)SignInPageUsageOptionsEnum.CreateAccount), 'Accounts/Admin/AdminPanel')">
        Add New User
    </button>
</div>

<div id="@Model.ChangePasswordModalData.ModalId" class="modal fade" tabindex="-1" role="dialog">
    <div id="@Model.ChangePasswordModalData.ModalDialogId" class="modal-dialog modal-dialog-full-parent-width">
        <div id="@Model.ChangePasswordModalData.ModalContentId" class="modal-content full-parent-width full-parent-height modal-dialog-centered">
        </div>
    </div>
</div>

<div id="@Model.UserDeleteConfirmationModalData.ModalId" class="modal" tabindex="-1" role="dialog">
    <div id="@Model.UserDeleteConfirmationModalData.ModalDialogId" class="modal-dialog modal-dialog-full-parent-width" style="bottom: auto;">
        <div id="@Model.UserDeleteConfirmationModalData.ModalContentId" class="modal-content full-parent-width full-parent-height modal-dialog-centered">
        </div>
    </div>
</div>

<ul id="@Model.NotificationBoxElementId" class="top-notification-box"></ul>

@Html.AntiForgeryToken()