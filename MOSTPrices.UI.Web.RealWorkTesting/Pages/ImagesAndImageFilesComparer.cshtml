@page
@using MOSTComputers.Models.Product.Models
@using MOSTComputers.UI.Web.RealWorkTesting.Models.ImagesAndImageFilesComparison
@model MOSTComputers.UI.Web.RealWorkTesting.Pages.ImagesAndImageFilesComparerModel
@{
}

@section Styles {
    <link rel="stylesheet" href="~/css/BodyFullHeight.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/Pages/ImagesAndImageFilesComparer.js"></script>
}

<div class="container d-flex flex-column full-parent-width full-parent-height">
    <div class="d-flex mb-3 full-parent-width">
        <div class="d-flex" style="width: 50%">
            <h5 class="ms-3 me-2">Select product:</h5>

            <input id="images_comparer_product_id_input" type="number" />
        </div>

        <h5 class="ms-3 me-2">Select category:</h5>

        <select id="images_comparer_category_select">
            @foreach (Category category in Model.GetAllCategories())
            {
                <option value="@category.Id">@category.Description</option>
            }
        </select>
    </div>

    <div class="d-flex full-parent-width full-parent-height">
        <div id="images_comparer_first_images_container" class="full-parent-height pe-2" style="width: 50%">
            @if (ImagesAndImageFilesComparerModel.FirstImagesToCompare is not null)
            {
                <partial name="ImagesAndImageFilesComparer/_ImageComparisonDataDisplayPartial" model="ImagesAndImageFilesComparerModel.FirstImagesToCompare" />
            }
        </div>
        <div id="images_comparer_second_images_container" class="full-parent-height ps-2" style="width: 50%">
            @if (ImagesAndImageFilesComparerModel.SecondImagesToCompare is not null)
            {
                <partial name="ImagesAndImageFilesComparer/_ImageComparisonDataDisplayPartial" model="ImagesAndImageFilesComparerModel.SecondImagesToCompare" />
            }
        </div>
    </div>

    @Html.AntiForgeryToken()
</div>