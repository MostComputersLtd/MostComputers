    <Popup @bind-IsVisible="IsProductPromotionPopupVisible"
        PopupMarginOptions='new () { Left = "5vw", Right = "5vw", Top = "5vh", Bottom = "5vh" }'>
        <HeaderContent>
            <div class="full-parent-width full-parent-height d-flex flex-row align-items-center">

                <h5 class="popup-header-text me-3">Promotion:</h5>
                <h4 class="popup-header-text me-3">CSTID: @ProductToDisplay.Product.Id</h4>
                <h4 class="popup-header-text me-3">@ProductToDisplay.Product.Name</h4>
            </div>
        </HeaderContent>
        
        <ChildContent>
            @if (ProductToDisplayCurrentPromotion is not null)
            {
                <div class="container d-flex flex-column p-2 full-parent-width full-parent-height">

                    <div class="col-4 d-flex flex-row">
                        <p>ID: @(ProductToDisplayCurrentPromotion.Id.ToString())</p>
                    </div>

                    <div class="col-8">
                        <p>Name: @(ProductToDisplayCurrentPromotion.Name ?? "-")</p>
                    </div>

                    <div class="col-12">
                        <p>Type: @(ProductToDisplayCurrentPromotion.Type?.ToString() ?? "-")</p>
                    </div>
                    
                    <div class="col-12">
                        <div class="col-6 col-md-12">
                            <p>Start Date: @(ProductToDisplayCurrentPromotion.StartDate?.ToString() ?? "-")</p>
                        </div>

                        <div class="col-6 col-md-12">
                            <p>Expire Date: @(ProductToDisplayCurrentPromotion.ExpirationDate?.ToString() ?? "-")</p>
                        </div>
                    </div>

                    <div class="col-6 col-md-12">
                        <p>Discount €: @(ProductToDisplayCurrentPromotion.DiscountEUR ?? 0M)</p>
                    </div>

                    <div class="col-6 col-md-12">
                        <p>Discount $: @(ProductToDisplayCurrentPromotion.DiscountUSD ?? 0M)</p>
                    </div>

                    <div class="col-12">
                        <div class="col-6 col-md-12">
                            <p>Min Quantity: @(ProductToDisplayCurrentPromotion.MinimumQuantity ?? 0)</p>
                        </div>

                        <div class="col-6 col-md-12">
                            <p>Max Quantity: @(ProductToDisplayCurrentPromotion.MaximumQuantity ?? 0)</p>
                        </div>
                    </div>

                    <div class="col-12">
                        <p>Expire Quantity: @(ProductToDisplayCurrentPromotion.ExpQuantity ?? 0)</p>
                    </div>

                    <div class="col-12">

                        @if (ProductToDisplayCurrentPromotion.RequiredProductIds?.Count > 0)
                        {
                            <ul class="d-inline-flex list-style-none">
                                @foreach (int requiredProductId in ProductToDisplayCurrentPromotion.RequiredProductIds)
                                {
                                    <li class="ms-2 me-2">
                                        <p>@requiredProductId</p>
                                    </li>
                                }
                            </ul>
                        }
                    </div>
                </div>
            }
            else
            {
                <div>
                    <p>Promotion not found</p>
				</div>
            }
        </ChildContent>
    </Popup>

    <Popup @bind-IsVisible="IsProductInfoPromotionPopupVisible"
        PopupMarginOptions='new () { Left = "5vw", Right = "5vw", Top = "5vh", Bottom = "5vh" }'>
        <HeaderContent>
            <div class="full-parent-width full-parent-height d-flex flex-row align-items-center">

                <h5 class="popup-header-text me-3">Promotion:</h5>
                <h4 class="popup-header-text me-3">CSTID: @ProductToDisplay.Product.Id</h4>
                <h4 class="popup-header-text me-3">@ProductToDisplay.Product.Name</h4>
            </div>
        </HeaderContent>

        <ChildContent>
            <div class="container d-flex flex-column p-2 full-parent-width full-parent-height">

                @{
                    int? promotionPictureId = ProductToDisplay.Product.AlertPictureId;

                    if (promotionPictureId is null || promotionPictureId <= 0)
                    {
                        promotionPictureId = ProductToDisplay.Product.PromotionPictureId;
                    }
                }

                <div class="col-12">
